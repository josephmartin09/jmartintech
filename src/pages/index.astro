---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<!-- Hero -->
	<section class="bg-gray-400 p-8 text-center">
		<h1 class="text-3xl font-bold mb-4">Hero Section</h1>
		<p>Big attention-grabbing content here.</p>
	</section>

	<!-- About Section -->
	<section class="bg-white p-8 text-center max-w-6xl mx-auto">
		<h1 class="text-3xl font-bold mb-4">Company Statement</h1>
		<p class="text-gray-700">
			We are a company passionate about building fast, responsive web experiences.
			Our team blends deep technical knowledge with user-centric design to deliver products that matter.
		</p>
	</section>

	<!-- Cards -->
	<section class="max-w-6xl mx-auto p-4">
		<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
			<div class="bg-red-200 p-4 text-center">Col 1</div>
			<div class="bg-green-200 p-4 text-center">Col 2</div>
			<div class="bg-blue-200 p-4 text-center">Col 3</div>
			<div class="bg-orange-200 p-4 text-center">Col 4</div>
			<div class="bg-purple-200 p-4 text-center">Col 5</div>
			<div class="bg-yellow-200 p-4 text-center">Col 6</div>
		</div>
	</section>

	<!-- Feature Sections -->
	<section class="max-w-6xl mx-auto p-4">
		<div class="flex flex-col md:flex-row items-center gap-6">
			<!-- image box -->
			<div class="w-full md:w-1/2 bg-gray-300 flex items-center justify-center h-48 rounded">
				<span class="text-gray-700 font-semibold">Image</span>
			</div>
			<!-- text content -->
			<div class="md:w-1/2">
				<h3 class="text-2xl font-semibold mb-2">Title One</h3>
				<p class="mb-4 text-gray-700">Some descriptive text about this feature or service.</p>
				<button class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Learn More</button>
			</div>
		</div>
	</section>

	<section class="max-w-6xl mx-auto p-4">
		<div class="flex flex-col md:flex-row-reverse items-center gap-6">
			<div class="w-full md:w-1/2 bg-gray-300 flex items-center justify-center h-48 rounded">
				<span class="text-gray-700 font-semibold">Image</span>
			</div>
			<!-- text content -->
			<div class="md:w-1/2">
				<h3 class="text-2xl font-semibold mb-2">Title Two</h3>
				<p class="mb-4 text-gray-700">More details about another feature or service.</p>
				<button class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Learn More</button>
			</div>
		</div>
	</section>

	<section class="max-w-6xl mx-auto p-4">
		<div class="flex flex-col md:flex-row items-center gap-6">
			<!-- image box -->
			<div class="w-full md:w-1/2 bg-gray-300 flex items-center justify-center h-48 rounded">
				<span class="text-gray-700 font-semibold">Image</span>
			</div>
			<!-- text content -->
			<div class="md:w-1/2">
				<h3 class="text-2xl font-semibold mb-2">Title Three</h3>
				<p class="mb-4 text-gray-700">Even more descriptive text about this feature or service.</p>
				<button class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Learn More</button>
			</div>
		</div>
	</section>
</Layout>
