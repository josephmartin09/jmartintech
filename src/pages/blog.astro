---
import Layout from '../layouts/Layout.astro';
import {getCollection} from 'astro:content';

const posts = await getCollection('blog');
---

<Layout>
	<!-- Page Header -->
	<section class="bg-gray-400 p-8 text-center">
		<h1 class="text-3xl font-bold mb-4">Contact Us</h1>
		<p>Portfolio & Blog</p>
	</section>

  <!-- Post Cards Section -->
  <section class="max-w-6xl mx-auto p-4">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      {posts.map(post => (
        <a
          href={`/blog/${post.slug}`}
          class="block bg-white rounded-lg shadow hover:shadow-lg transition-shadow p-6"
        >
          <h2 class="text-xl font-semibold mb-2">{post.data.title}</h2>
          <p class="text-gray-600">{post.data.description || 'No description available.'}</p>
        </a>
      ))}
    </div>
  </section>
</Layout>
